<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card c-form">
            <div class="card-content">
                <%= form_for([@paper, @paper.reviews.build]) do |form| %>
                    <div>
                        <strong>Relevancia (*)</strong><br><br>
                        <label><%= form.radio_button :relevance, 3, class: 'with-gap' %><span>3: muy relevante</span></label><br>
                        <label><%= form.radio_button :relevance, 2, class: 'with-gap' %><span>2: relevante</span></label><br>
                        <label><%= form.radio_button :relevance, 1, class: 'with-gap' %><span>1: irrelevante</span></label>
                    </div><br>
                    <div class="divider"></div><br>
                    <div>
                        <strong>Definición del problema (*)</strong><br><br>
                        <label><%= form.radio_button :problem_def, 5, class: 'with-gap' %><span>5: excelente</span></label><br>
                        <label><%= form.radio_button :problem_def, 4, class: 'with-gap' %><span>4: bueno</span></label><br>
                        <label><%= form.radio_button :problem_def, 3, class: 'with-gap' %><span>3: justo</span></label><br>
                        <label><%= form.radio_button :problem_def, 2, class: 'with-gap' %><span>2: pobre</span></label><br>
                        <label><%= form.radio_button :problem_def, 1, class: 'with-gap' %><span>1: muy pobre</span></label>
                    </div><br>
                    <div class="divider"></div><br>
                    <div>
                        <strong>Definición del objetivo general (*)</strong><br><br>
                        <label><%= form.radio_button :general_def, 5, class: 'with-gap' %><span>5: excelente</span></label><br>
                        <label><%= form.radio_button :general_def, 4, class: 'with-gap' %><span>4: bueno</span></label><br>
                        <label><%= form.radio_button :general_def, 3, class: 'with-gap' %><span>3: justo</span></label><br>
                        <label><%= form.radio_button :general_def, 2, class: 'with-gap' %><span>2: pobre</span></label><br>
                        <label><%= form.radio_button :general_def, 1, class: 'with-gap' %><span>1: muy pobre</span></label>
                    </div><br>
                    <div class="divider"></div><br>
                    <div>
                        <strong>Definición de los objetivos específicos (*)</strong><br><br>
                        <label><%= form.radio_button :specific_def, 5, class: 'with-gap' %><span>5: excelente</span></label><br>
                        <label><%= form.radio_button :specific_def, 4, class: 'with-gap' %><span>4: bueno</span></label><br>
                        <label><%= form.radio_button :specific_def, 3, class: 'with-gap' %><span>3: justo</span></label><br>
                        <label><%= form.radio_button :specific_def, 2, class: 'with-gap' %><span>2: pobre</span></label><br>
                        <label><%= form.radio_button :specific_def, 1, class: 'with-gap' %><span>1: muy pobre</span></label>
                    </div><br>
                    <div class="divider"></div><br>
                    <div>
                        <strong>Confidencia del revisor (*)</strong><br><br>
                        <label><%= form.radio_button :confidence, 5, class: 'with-gap' %><span>5: experto</span></label><br>
                        <label><%= form.radio_button :confidence, 4, class: 'with-gap' %><span>4: alto</span></label><br>
                        <label><%= form.radio_button :confidence, 3, class: 'with-gap' %><span>3: medio</span></label><br>
                        <label><%= form.radio_button :confidence, 2, class: 'with-gap' %><span>2: bajo</span></label><br>
                        <label><%= form.radio_button :confidence, 1, class: 'with-gap' %><span>1: ninguno</span></label>
                    </div><br>
                    <div class="divider"></div><br>
                    <strong>Evaluación general (*)</strong><br><br>
                    <div class="input-field">
                        <%= form.label :general_evaluation, 'Escriba la evaluación general aquí' %>
                        <%= form.text_area :general_evaluation, class: 'materialize-textarea' %>
                    </div><br>
                    <div class="divider"></div><br>
                    <strong>Mensaje personal al profesor de la materia</strong><br><br>
                    <div class="input-field">
                        <%= form.label :personal_message, 'Escriba su mensaje personal aquí' %>
                        <%= form.text_area :personal_message, class: 'materialize-textarea' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>