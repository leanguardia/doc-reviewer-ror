<table class=" <%= review.is_edited? ? 'review-edited' : 'review-show' %>">
    <tr class="paper-title">
        <td colspan="2">
            <% if (review.is_new==true && review.is_edited==false) || (review.is_new==true && review.is_edited==true) %>
                <strong>Revisión <%= review.id %> <%= review.is_edited? ? '(editado)' : '' %></strong>
            <% elsif (review.is_new==false && review.is_edited==false) %>
                <strong>Revisión <%= review.copy_id %> <%= review.is_edited? ? '(editado)' : '' %></strong>
            <% end %>
        </td>
    </tr>
    <tr class="thin-row">
        <th>Miembro tribunal:</th>
        <td><%= review.user.name %> <%= review.user.lastname %></td>
    </tr>
    <tr class="thin-row">
        <th>Documento:</th>
        <td><%= review.paper_id %></td>
    </tr>
    <tr class="thin-row">
        <th>Título:</th>
        <td><%= @paper.title %></td>
    </tr>
    <tr class="thin-row">
        <th>Fecha:</th>
        <td><%= review.created_at.strftime("%b %d, %H:%M") %></td>
    </tr>
    <tr class="thin-row">
        <th>Antecedentes:</th>
        <td><%= review.relevance %></td>
    </tr>
    <tr class="thin-row">
        <th>Definición del problema:</th>
        <td><%= review.problem_def %></td>
    </tr>
    <tr class="thin-row">
        <th>Definición del objetivo general:</th>
        <td><%= review.general_def %></td>
    </tr>
    <tr class="thin-row">
        <th>Definición de los objetivos específicos:</th>
        <td><%= review.specific_def %></td>
    </tr>
    <tr class="thin-row">
        <th>Confidencia del revisor:</th>
        <td><%= review.confidence %></td>
    </tr>
    <tr>
        <th>Evaluación general:</th>
        <td><%= review.general_evaluation %><br>
            <%= simple_format(review.general_evaluation_text) %>
        </td>
    </tr>
    <tr>
        <th>Mensaje confidencial al profesor de la materia:</th>
        <td><%= current_user.docente? ? simple_format(review.personal_message) : '' %></td>
    </tr>
</table>
<br>