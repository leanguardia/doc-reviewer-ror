<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card brown lighten-5">
            <div class="card-content">
                <h3 class="center-align">Asignar Tribunal</h3>
                <%= form_for([@event, @paper, @assingment]) do |form| %>
                    <div>
                        <%= form.label :director_id, 'Director' %>
                        <%= form.collection_select :director_id, User.all.select{|u| u.role=='admin'} , :id, :complete_name, include_blank: true %>
                    </div>
                    <div>
                        <%= form.label :tutor_id, 'Tutor' %>
                        <%= form.collection_select :tutor_id, User.all.select{|u| u.role=='tutor'} , :id, :complete_name, include_blank: true %>
                    </div>
                    <div>
                        <%= form.label :relator_id, 'Relator' %>
                        <%= form.collection_select :relator_id, User.all.select{|u| u.role=='relator'} , :id, :complete_name, include_blank: true %>
                    </div><br>

                    <div class="center-align">
                        <%= button_tag(class: "btn-small waves-effect waves-light") do %>
                            Asignar tribunal
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>